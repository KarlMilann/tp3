
# Configure the AWS Provider
provider "aws" {
  version = "~> 2.0"
  region  = "us-east-1"
  access_key = ""#removed as you asked
  secret_key = ""#removed as you asked
}
data "aws_ami" "ubuntu" {
  most_recent = true

  filter {
    name   = "name"
    values = ["ubuntu/images/hvm-ssd/ubuntu-trusty-14.04-amd64-server-*"]
  }

  filter {
    name   = "virtualization-type"
    values = ["hvm"]
  }

  owners = ["099720109477"] # Canonical
}

resource "aws_instance" "example_de_l_empapaouteur" {
  ami = "${data.aws_ami.ubuntu.id}"
  vpc_security_group_ids = ["${aws_security_group.lempapaouteur_sg.id}"]
  subnet_id = "${aws_subnet.lempapaouteur_sn.id}"
  instance_type = "t2.micro"
  key_name = "${aws_key_pair.deployer.key_name}"
  tags = {
    Name = "OMAEWASHINDERU"
  }

  provisioner "remote-exec" {
  inline = [
  "sudo apt update",
  "sudo apt-get install openjdk-9-jdk -y",
  "echo '/usr/lib/jvm/java-9-openjdk-amd64'",
  "sudo apt-get install maven -y",
  "sudo apt-get install git -y",
  "sudo ufw allow 8080",
  "git clone https://github.com/spring-projects/spring-petclinic.git",
  "cd spring-petclinic",
  "mvn package",
  "java -jar target/*.jar",
  "hostname -I"
  ]

  connection {
    type     = "ssh"
    user     = "ubuntu"
    host     = "${self.public_ip}"
    private_key = "${file("private_key_true")}"
    }
  }

}

resource "aws_vpc" "vpc_lempapaouteur" {
cidr_block = "172.16.0.0/16"
enable_dns_hostnames = true
enable_dns_support = true
tags = {
Name = "vpc_lempapaouteur"
}
}




resource "aws_subnet" "lempapaouteur_sn" {
cidr_block = "${cidrsubnet(aws_vpc.vpc_lempapaouteur.cidr_block, 3, 1)}"
vpc_id = "${aws_vpc.vpc_lempapaouteur.id}"
availability_zone = "us-east-1a"
map_public_ip_on_launch = true

tags = {
Name = "lempapaouteur_sn"
}
}
resource "aws_internet_gateway" "lempapaouteur_igw" {
vpc_id = "${aws_vpc.vpc_lempapaouteur.id}"
}
resource "aws_route_table" "lempapaouteur_rt" {
vpc_id = "${aws_vpc.vpc_lempapaouteur.id}"

route {
cidr_block = "0.0.0.0/0"
gateway_id = "${aws_internet_gateway.lempapaouteur_igw.id}"
}
tags = {
Name = "lempapaouteur_rt"
}
}
resource "aws_route_table_association" "lempapaouteur_rta" {
subnet_id = "${aws_subnet.lempapaouteur_sn.id}"
route_table_id = "${aws_route_table.lempapaouteur_rt.id}"

}
resource "aws_key_pair" "deployer" {
key_name = "lempapaouteur_key"
public_key="ssh-rsa  rsa-key-20191007"
}
resource "aws_security_group" "lempapaouteur_sg" {
name = "allow_ssh"
vpc_id = "${aws_vpc.vpc_lempapaouteur.id}"
ingress {
from_port = 22
to_port = 22
protocol = "tcp"
cidr_blocks=["0.0.0.0/0"]
}
egress {
from_port = 0
to_port = 0
protocol = "-1"
cidr_blocks=["0.0.0.0/0"]
}
}
